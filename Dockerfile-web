# 第一阶段：构建Vue前端
FROM node:20-alpine as web-builder
WORKDIR /app

# 设置 npm 镜像源
RUN npm config set registry https://registry.npmmirror.com

# 复制依赖文件并安装依赖 (利用缓存)
COPY main/manager-web/package*.json ./
# 使用 legacy-peer-deps 防止因依赖冲突导致安装失败，这对旧项目很常见
RUN npm install --legacy-peer-deps

# 复制源码并构建 (由于 .dockerignore 排除了 node_modules，这里不会覆盖已安装的依赖)
COPY main/manager-web .
RUN npm run build

# 第二阶段：构建Java后端
FROM maven:3.9-eclipse-temurin-21-alpine as api-builder
WORKDIR /app

# 复制 pom.xml 并下载依赖 (利用缓存)
COPY main/manage-api/pom.xml .
# 使用阿里云 Maven 镜像 (已经在 pom.xml 中配置)
RUN mvn dependency:go-offline -B

# 复制源码并构建
COPY main/manage-api/src ./src
RUN mvn clean package -Dmaven.test.skip=true -DskipTests -B

# 第三阶段：构建最终镜像
FROM bellsoft/liberica-runtime-container:jre-21-glibc

# 安装Nginx和字体库
RUN apk update && \
    apk add --no-cache --repository=http://dl-cdn.alpinelinux.org/alpine/edge/testing/ \
        nginx \
        bash \
        fontconfig \
        ttf-dejavu \
        msttcorefonts-installer \
    && ACCEPT_EULA=Y apk add --no-cache msttcorefonts-installer \
    && fc-cache -f -v \
    && rm -rf /var/cache/apk/*

# 更新字体缓存
RUN (printf 'YES\n' | update-ms-fonts || true) && fc-cache -f -v

# 配置Nginx
COPY docs/docker/nginx.conf /etc/nginx/nginx.conf

# 复制前端构建产物
COPY --from=web-builder /app/dist /usr/share/nginx/html

# 复制Java后端JAR包
COPY --from=api-builder /app/target/xiaozhi-esp32-api.jar /app/xiaozhi-esp32-api.jar

# 暴露端口
EXPOSE 8002

# 启动脚本
COPY docs/docker/start.sh /start.sh
RUN chmod +x /start.sh
CMD ["/start.sh"]
